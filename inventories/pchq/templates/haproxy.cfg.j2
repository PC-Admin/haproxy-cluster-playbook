frontend pchq_postgresql
    bind *:52432
    mode tcp
    option tcplog
    timeout client 1h
    log global
    default_backend pchq_postgresql

backend pchq_postgresql
    balance source
    mode tcp
    timeout connect 90000
    timeout server 1h
    option httpchk
    http-check expect status 200
    timeout check 5000
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    server postgres01 postgres01.penholder.xyz:5432 check port 8008
    server postgres02 postgres02.penholder.xyz:5432 check port 8008
    server postgres03 postgres03.penholder.xyz:5432 check port 8008

backend pchq_postgresql_read
    balance source
    mode tcp
    timeout connect 90000
    timeout server 1h
    timeout check 5000
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    server postgres01 postgres01.penholder.xyz:5432 check
    server postgres02 postgres02.penholder.xyz:5432 check
    server postgres03 postgres03.penholder.xyz:5432 check
